<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.gh4a.widget.IntegerListPreference
        app:iconSpaceReserved="false"
        android:defaultValue="@integer/default_theme"
        android:entries="@array/theme_items"
        android:entryValues="@array/theme_values"
        android:key="theme"
        android:summary="%s"
        android:title="@string/theme" />

    <ListPreference
        app:iconSpaceReserved="false"
        android:defaultValue="newsfeed"
        android:entries="@array/start_page_items"
        android:entryValues="@array/start_page_values"
        android:key="start_page"
        android:summary="%s"
        android:title="@string/start_page" />

    <com.gh4a.widget.IntegerListPreference
        app:iconSpaceReserved="false"
        android:defaultValue="2"
        android:entries="@array/text_size_items"
        android:entryValues="@array/text_size_values"
        android:key="webview_initial_zoom"
        android:summary="%s"
        android:title="@string/menu_text_size" />

    <com.gh4a.widget.IntegerListPreference
        app:iconSpaceReserved="false"
        android:defaultValue="1"
        android:entries="@array/load_gif_mode_items"
        android:entryValues="@array/load_gif_mode_values"
        android:key="http_gif_load_mode"
        android:summary="%s"
        android:title="@string/menu_gif_load_mode" />

    <SwitchPreference
        app:iconSpaceReserved="false"
        android:defaultValue="true"
        android:key="use_custom_tabs"
        android:summaryOn="@string/open_links_inside_app"
        android:summaryOff="@string/open_links_external_browser"
        android:title="@string/use_custom_tabs" />

    <SwitchPreference
        app:iconSpaceReserved="false"
        android:defaultValue="false"
        android:key="notifications"
        android:title="@string/notifications" />

    <com.gh4a.widget.IntegerListPreference
        app:iconSpaceReserved="false"
        android:defaultValue="15"
        android:dependency="notifications"
        android:entries="@array/notification_interval_items"
        android:entryValues="@array/notification_interval_values"
        android:key="notification_interval"
        android:summary="%s"
        android:title="@string/notification_interval" />

    <PreferenceCategory
        app:iconSpaceReserved="false"
        android:title="@string/translation_settings" />

    <SwitchPreference
        app:iconSpaceReserved="false"
        android:defaultValue="true"
        android:key="translation_enabled"
        android:title="@string/translation_enabled" />

    <EditTextPreference
        app:iconSpaceReserved="false"
        android:defaultValue=""
        android:key="translation_gateway_base_url"
        android:summary="@string/translation_gateway_base_url_hint"
        android:title="@string/translation_gateway_base_url" />

    <EditTextPreference
        app:iconSpaceReserved="false"
        android:defaultValue="/translate"
        android:key="translation_gateway_path"
        android:summary="@string/translation_gateway_path_hint"
        android:title="@string/translation_gateway_path" />

    <EditTextPreference
        app:iconSpaceReserved="false"
        android:defaultValue=""
        android:key="translation_api_key"
        android:title="@string/translation_api_key" />

    <ListPreference
        app:iconSpaceReserved="false"
        android:defaultValue="zh-CN"
        android:entries="@array/translation_target_lang_items"
        android:entryValues="@array/translation_target_lang_values"
        android:key="translation_target_lang"
        android:summary="%s"
        android:title="@string/translation_target_language" />

    <com.gh4a.widget.IntegerListPreference
        app:iconSpaceReserved="false"
        android:defaultValue="15"
        android:entries="@array/translation_timeout_items"
        android:entryValues="@array/translation_timeout_values"
        android:key="translation_timeout_sec"
        android:summary="%s"
        android:title="@string/translation_timeout" />

    <Preference
        app:iconSpaceReserved="false"
        android:key="about"
        android:title="@string/about" />

    <Preference
        app:iconSpaceReserved="false"
        android:key="open_source_components"
        android:title="@string/open_source_components" />

</PreferenceScreen>
